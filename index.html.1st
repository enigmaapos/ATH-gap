<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Top 500 Coin Gap Difference from ATH</title>
  <style>
    body {
      background: #0b0b0b;
      color: #eaeaea;
      font-family: Arial, sans-serif;
      padding: 20px;
    }
    h1 { text-align: center; }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    th, td {
      padding: 8px 10px;
      text-align: right;
      border-bottom: 1px solid #333;
    }
    th {
      background: #1e1e1e;
      cursor: pointer;
    }
    td:first-child, th:first-child { text-align: left; }
    tr:hover { background: #1a1a1a; }
  </style>
</head>
<body>
  <h1>Top 500 Coins â€” Gap Difference from ATH</h1>
  <table id="coinTable">
    <thead>
      <tr>
        <th>Rank</th>
        <th>Name</th>
        <th>Symbol</th>
        <th>Price (USD)</th>
        <th>ATH (USD)</th>
        <th>Gap from ATH (%)</th>
      </tr>
    </thead>
    <tbody></tbody>
  </table>

  <script>
    async function fetchTop500() {
      const perPage = 250;
      let allCoins = [];

      for (let page = 1; page <= 2; page++) {
        const res = await fetch(`https://api.coingecko.com/api/v3/coins/markets?vs_currency=usd&order=market_cap_desc&per_page=${perPage}&page=${page}&sparkline=false`);
        const data = await res.json();
        allCoins = allCoins.concat(data);
      }

      const tableBody = document.querySelector('#coinTable tbody');
      tableBody.innerHTML = '';

      allCoins.forEach((coin, index) => {
        const gap = ((coin.ath - coin.current_price) / coin.ath) * 100;
        const row = document.createElement('tr');
        row.innerHTML = `
          <td>${index + 1}</td>
          <td>${coin.name}</td>
          <td>${coin.symbol.toUpperCase()}</td>
          <td>$${coin.current_price.toLocaleString()}</td>
          <td>$${coin.ath.toLocaleString()}</td>
          <td style="color:${gap > 80 ? 'lime' : gap > 50 ? 'orange' : 'red'}">
            ${gap.toFixed(2)}%
          </td>
        `;
        tableBody.appendChild(row);
      });
    }

    fetchTop500();
    setInterval(fetchTop500, 300000); // auto refresh every 5 min
  </script>
</body>
</html>
